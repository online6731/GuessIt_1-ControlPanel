        <Button x:Name="controlPanelButton_Copy1" Content="پنل مدیریت" Margin="657,385,22,37" FontFamily="B Koodak" FontSize="36" Click="controlPanelButton_Click"/>
        <Button x:Name="controlPanelButton_Copy2" Content="پنل مدیریت" Margin="421,385,258,37" FontFamily="B Koodak" FontSize="36" Click="controlPanelButton_Click"/>

    </Grid>
